        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
                    {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="h-full">
<main class="grid min-h-full place-items-center bg-stone-200 px-6 py-24 sm:py-32 lg:px-8">
  <div class="text-center">
  <h1 class="mb-4 text-4xl text-teal-400 font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">HTTP Error {{ exception.statusCode }} </h1>
    <h1 class="mt-4 text-3xl font-bold tracking-tight text-red-800 sm:text-5xl">{{ exception.statusText}}</h1>
    <p class="mt-6 text-base leading-7 text-gray-600">Oups, quelque chose s'est mal passé !</p>
    <div class="mt-10 flex items-center justify-center gap-x-6">
      <a href="{{ path('app_post_index')}}" class="rounded-md bg-teal-400 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-500">Retour à l'accueil</a>

    </div>
  </div>
</main>
        </body>
</html>